---
import { storyblokEditable } from '@storyblok/astro'

const { blok } = Astro.props
---

<div {...storyblokEditable(blok)} class="bg-white dark:bg-background-dark py-24 transition-colors">
  <div class="mx-auto max-w-[1200px] px-4 sm:px-6 lg:px-8">
    <div class="mb-16 flex flex-col items-start gap-4">
      <h2 class="text-4xl md:text-5xl font-black text-text-main dark:text-white uppercase tracking-tighter">
        {blok.title || 'Upcoming Action'}
      </h2>
      <div class="h-1.5 w-24 bg-primary"></div>
      <p class="text-xl text-text-muted dark:text-gray-400 font-medium max-w-2xl">
        {blok.description || 'Join us on the ground. Rallies, protests, and community gatherings.'}
      </p>
    </div>

    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
      {blok.events?.map((event: any) => (
        <article class="flex flex-col bg-gray-50 dark:bg-white/5 rounded-3xl overflow-hidden border border-gray-100 dark:border-white/5 hover:border-primary/30 transition-all group shadow-sm hover:shadow-xl">
          <div class="relative h-48 overflow-hidden">
            <div class="absolute inset-0 bg-primary/20 opacity-0 group-hover:opacity-100 transition-opacity z-10"></div>
            <img 
              src={event.image?.filename || 'https://lh3.googleusercontent.com/aida-public/AB6AXuB6czdVAdRIYITT1gKKvOr-eqIvh5ZEcO5E8UXFPVlYX3C95Angatef4PRb4Fy90Yk2DRv_117ET7QOuBYvojhjPy0pR3lQnlDNkyrHTyckQe1uo0qHDCTjBCt3oALSRbiG47B8NE_KJ9CYfJsI4ifjuKlr4qrVPFU0_gP_0ae_pfTB6hB6SQKkvnpwmh2B-1isykuGa1fZOh152PH2FFd4eTfrs6gOL20Y7mmMfVXfOkQ__O0ZYTM2FarymW9yimnXaKE2HDRupNV8'} 
              alt={event.title}
              class="w-full h-full object-cover transition-transform duration-700 group-hover:scale-110"
            />
            <div class="absolute top-4 right-4 bg-white dark:bg-black/80 backdrop-blur text-text-main dark:text-white px-3 py-1 rounded-lg text-xs font-black uppercase tracking-widest border border-gray-100 dark:border-white/10 shadow-lg">
              {event.date || 'TBA'}
            </div>
          </div>
          
          <div class="p-8 flex flex-col flex-grow gap-4">
            <div class="flex items-center gap-2 text-primary text-xs font-black uppercase tracking-widest">
              <span class="material-symbols-outlined text-sm">location_on</span>
              {event.location || 'Online'}
            </div>
            
            <h3 class="text-2xl font-black text-text-main dark:text-white uppercase leading-tight group-hover:text-primary transition-colors">
              {event.title}
            </h3>
            
            <p class="text-text-muted dark:text-gray-400 leading-relaxed line-clamp-3 mb-4">
              {event.description}
            </p>
            
            <div class="mt-auto pt-6 border-t border-gray-200 dark:border-white/10 flex justify-between items-center">
              <a href={event.link?.cached_url || '#'} class="text-sm font-bold text-primary uppercase tracking-wide hover:underline">
                RSVP Now
              </a>
              <span class="material-symbols-outlined text-text-muted dark:text-gray-600 group-hover:text-primary transition-colors">arrow_forward</span>
            </div>
          </div>
        </article>
      )) || (
        <div class="col-span-full py-12 text-center bg-gray-50 dark:bg-white/5 rounded-3xl border-dashed border-2 border-gray-200 dark:border-gray-700">
           <span class="material-symbols-outlined text-4xl text-gray-400 mb-2">event_busy</span>
           <p class="text-gray-500 font-medium">No upcoming events scheduled at the moment.</p>
        </div>
      )}
    </div>
  </div>
</div>
