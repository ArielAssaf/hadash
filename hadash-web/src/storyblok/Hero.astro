---
import { storyblokEditable } from '@storyblok/astro'

const { blok } = Astro.props
---

<div {...storyblokEditable(blok)} class="relative w-full">
  <div class="absolute inset-0 z-0 bg-cover bg-center" style={`background-image: url("${blok.background_image?.filename || 'https://lh3.googleusercontent.com/aida-public/AB6AXuB4N_ORENr-HXyeuYK49rvVkWdap6VVk8kms0dCntNsYMvxNahq3PESuzc3Ui9seHGDmDANJ9bHd8D8MzYf2HtSt9OVyPdFn4g1V9dOOSMs0d4mYjGxBPQphz75c99N05_IH2SH81AckIccyNZ9PKrblwrvhZJPtRsN9hv4QuK8FALY5Qy_nRJ6NbjAineUUCOAtVZn4fMySUMVHPESZIZXxisupUF_AVH-2RRo4QFSakq_dJAvXU10zIhuSs_sh0x4kt_2ROWc28oV'}");`}>
    <div class="absolute inset-0 bg-gradient-to-r from-neutral-900/95 via-neutral-900/80 to-primary/20"></div>
  </div>
  <div class="relative z-10 mx-auto max-w-[1200px] px-4 py-32 sm:px-6 lg:px-8 lg:py-48">
    <div class="flex flex-col items-start text-left max-w-3xl">
      {blok.badge && (
      <div class="mb-8 inline-flex items-center rounded-full border border-white/20 bg-primary/90 px-4 py-1.5 text-sm font-bold text-white backdrop-blur-md shadow-lg">
        <span class="mr-2 h-2.5 w-2.5 rounded-full bg-white animate-pulse"></span>
        {blok.badge}
      </div>
      )}
      <h1 class="mb-8 text-5xl font-black leading-none tracking-tight text-white sm:text-7xl lg:text-8xl whitespace-pre-line">
        {blok.title || 'Building a Shared Future'}
      </h1>
      <p class="mb-12 max-w-2xl text-xl font-medium text-gray-200 sm:text-2xl leading-relaxed">
        {blok.description || 'Join the movement for peace, equality, and social justice. We are building bridges between communities.'}
      </p>
      <div class="flex flex-wrap gap-4">
        {blok.buttons?.map((button) => (
          <button class={`rounded-lg px-8 py-4 text-base font-black transition-all shadow-lg hover:shadow-xl uppercase tracking-wide ${button.style === 'primary' ? 'bg-primary text-white hover:bg-primary-dark' : 'bg-white/10 border border-white/30 text-white hover:bg-white/20 backdrop-blur-sm'}`}>
            {button.label}
          </button>
        )) || (
          <>
            <button class="rounded-lg bg-primary px-8 py-4 text-base font-black text-white transition-all hover:bg-primary-dark shadow-lg hover:shadow-xl uppercase tracking-wide">
              Join Us Now
            </button>
            <button class="rounded-lg bg-white/10 border border-white/30 px-8 py-4 text-base font-bold text-white transition-all hover:bg-white/20 backdrop-blur-sm uppercase tracking-wide">
              Read Manifesto
            </button>
          </>
        )}
      </div>
    </div>
  </div>
</div>
