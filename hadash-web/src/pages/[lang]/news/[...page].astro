---
import BaseLayout from '../../../layouts/BaseLayout.astro';
import { newsItems } from '../../../data/news';
import { locales, t } from '../../../utils/i18n';

export async function getStaticPaths({ paginate }) {
  return locales.flatMap(lang => {
    return paginate(newsItems, {
      params: { lang },
      pageSize: 6
    });
  });
}

const { page } = Astro.props;
const { lang } = Astro.params;
---

<BaseLayout lang={lang}>
  <div class="py-24 bg-gray-50 dark:bg-[#151515] min-h-screen">
    <div class="mx-auto max-w-[1200px] px-4 sm:px-6 lg:px-8">
      <div class="mb-12">
        <h1 class="text-4xl md:text-5xl font-black text-text-main dark:text-white uppercase tracking-tight">
          {t(lang, 'latestUpdates')}
        </h1>
        <div class="h-1.5 w-20 bg-primary mt-4"></div>
      </div>

      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-10">
        {page.data.map((article) => (
          <article class="flex flex-col gap-6 group">
             <div class="aspect-[16/10] w-full overflow-hidden rounded-xl bg-gray-200 relative shadow-md">
                <a href={`/${lang}/news/story/${article.slug}`}>
                  <div class="h-full w-full bg-cover bg-center transition-transform duration-700 group-hover:scale-110" style={`background-image: url("${article.image}")`}></div>
                </a>
             </div>
             <div class="flex flex-col gap-4">
                <h3 class="text-2xl font-black leading-tight text-text-main dark:text-white group-hover:text-primary transition-colors">
                  <a href={`/${lang}/news/story/${article.slug}`}>{article.title}</a>
                </h3>
                <p class="text-sm text-text-muted dark:text-gray-400 line-clamp-3 leading-relaxed">
                  {article.excerpt}
                </p>
                <a href={`/${lang}/news/story/${article.slug}`} class="text-xs font-black uppercase tracking-widest text-primary border-b-2 border-primary/20 hover:border-primary transition-all pb-1 w-fit">
                 {t(lang, 'readMore')}
                </a>
             </div>
          </article>
        ))}
      </div>

      <div class="mt-16 flex justify-center gap-4">
        {page.url.prev && <a href={page.url.prev} class="px-4 py-2 border border-gray-300 dark:border-gray-700 rounded-md hover:bg-gray-100 dark:hover:bg-gray-800 dark:text-white transition-colors">&larr;</a>}
        {page.url.next && <a href={page.url.next} class="px-4 py-2 border border-gray-300 dark:border-gray-700 rounded-md hover:bg-gray-100 dark:hover:bg-gray-800 dark:text-white transition-colors">&rarr;</a>}
      </div>
    </div>
  </div>
</BaseLayout>
