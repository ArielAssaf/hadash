---
import * as i18n from '../utils/i18n'
import * as payload from '../utils/payload'

const { lang = 'en' } = Astro.props
const dir = lang === 'he' ? 'rtl' : 'ltr'

const navigation = await payload.getPayloadGlobal('navigation', lang)
const settings = await payload.getPayloadGlobal('site-settings', lang)
// const navigation = { menuItems: [], footerMenus: [] }
// const settings = { logoText: 'Hadash', footerText: 'Footer' }
// console.log('Mocked global data used in BaseLayout');

const logoText = settings?.logoText || i18n.t(lang, 'logoText')
const officialPortal = settings?.officialPortal || i18n.t(lang, 'officialPortal')
const menuItems = navigation?.menuItems || []
const footerMenus = navigation?.footerMenus || []
---
<!DOCTYPE html>
<html class="light" lang={lang} dir={dir}>
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="icon" type="image/x-icon" href={`${import.meta.env.BASE_URL}favicon.svg`} />
    <title>Hadash - Building a Shared Future</title>
    <link href="https://fonts.googleapis.com" rel="preconnect" />
    <link crossorigin="" href="https://fonts.gstatic.com" rel="preconnect" />
    <link href="https://fonts.googleapis.com/css2?family=Rubik:wght@300;400;500;700;800;900&amp;display=swap" rel="stylesheet" />
    <link href="https://fonts.googleapis.com/css2?family=Material+Symbols+Outlined:wght,FILL@100..700,0..1&amp;display=swap" rel="stylesheet" />
    <style>
      body {
        font-family: 'Rubik', sans-serif;
      }
    </style>
  </head>
  <body class="bg-background-light dark:bg-background-dark text-text-main dark:text-white transition-colors duration-200">
    <div class="relative flex min-h-screen w-full flex-col overflow-x-hidden">
      <header class="sticky top-0 z-50 w-full border-b border-gray-100 bg-white/98 dark:bg-[#151515]/98 dark:border-white/5 backdrop-blur-md shadow-sm transition-colors duration-300">
        <div class="mx-auto flex h-24 max-w-[1400px] items-center justify-between px-6 sm:px-8 lg:px-12">
          
          <!-- Logo & Brand (Right in RTL, Left in LTR) -->
          <div class="flex items-center gap-4">
            <a class="flex items-center gap-4 group" href={i18n.getLocalizedPath('/', lang)}>
              <div class={`flex flex-col ${dir === 'rtl' ? 'items-end text-right' : 'items-start text-left'}`}>
                <h2 class="text-3xl font-black tracking-tighter text-primary uppercase leading-none transition-transform group-hover:scale-105">{logoText}</h2>
                {/* officialPortal && (
                  <span class="text-[10px] font-bold tracking-[0.2em] text-text-main dark:text-gray-400 uppercase leading-none mt-1.5 opacity-60">
                    {officialPortal}
                  </span>
                ) */}
              </div>
              <div class="flex h-14 w-14 items-center justify-center rounded-full bg-primary text-white font-black text-3xl leading-none shadow-xl border-4 border-white dark:border-[#151515] group-hover:rotate-12 transition-all group-hover:scale-110">
                ח
              </div>
            </a>
          </div>

          <!-- Navigation Links (Center) -->
          <nav class="hidden xl:flex items-center gap-10">
            {menuItems.map((item: any) => (
              <a class="text-[11px] font-black uppercase tracking-[0.15em] text-text-main dark:text-light-400 hover:text-primary transition-colors relative group py-2" href={item.link}>
                {item.label}
                <span class="absolute bottom-0 left-0 w-0 h-0.5 bg-primary transition-all duration-300 group-hover:w-full"></span>
              </a>
            ))}
          </nav>
          
          <!-- Actions & Language (Left in RTL, Right in LTR) -->
          <div class="flex items-center gap-6">
            <button class="hidden sm:flex items-center justify-center rounded-xl bg-primary px-8 py-3 text-[13px] font-black text-white transition-all hover:bg-primary-dark hover:scale-105 shadow-lg active:scale-95 uppercase tracking-widest">
              {i18n.t(lang, 'donate')}
            </button>
            <div class="hidden lg:flex items-center bg-gray-100 dark:bg-white/5 p-1 rounded-xl">
              <a class={`px-4 py-2 rounded-lg text-[10px] font-black uppercase transition-all ${lang === 'ru' ? 'bg-white dark:bg-white/10 shadow-sm text-text-main dark:text-white' : 'text-text-muted dark:text-gray-400 hover:text-text-main'}`} href={i18n.getLocalizedPath('/', 'ru')}>
                RU
              </a>
              <a class={`px-4 py-2 rounded-lg text-[10px] font-black uppercase transition-all ${lang === 'he' ? 'bg-primary shadow-sm text-white' : 'text-text-muted dark:text-gray-400 hover:text-text-main'}`} href={i18n.getLocalizedPath('/', 'he')}>
                HE
              </a>
              <a class={`px-4 py-2 rounded-lg text-[10px] font-black uppercase transition-all flex items-center gap-1 ${lang === 'en' ? 'bg-white dark:bg-white/10 shadow-sm text-text-main dark:text-white' : 'text-text-muted dark:text-gray-400 hover:text-text-main'}`} href={i18n.getLocalizedPath('/', 'en')}>
                EN <span class="material-symbols-outlined text-[13px]">language</span>
              </a>
            </div>
          </div>

          <!-- Mobile Menu Button -->
          <button class="xl:hidden text-text-main dark:text-white p-2 hover:bg-gray-100 dark:hover:bg-white/5 rounded-xl transition-colors">
            <span class="material-symbols-outlined text-3xl">menu</span>
          </button>
        </div>
      </header>
      
      <main class="flex-grow">
        <slot />
      </main>

      <footer class="border-t border-gray-200 bg-gray-50 dark:bg-background-dark dark:border-gray-800">
        <div class="mx-auto max-w-[1200px] px-4 py-16 sm:px-6 lg:px-8">
          <div class="flex flex-col md:flex-row md:justify-between gap-12">
            <div class="flex flex-col gap-8">
              <a class="flex items-center gap-4 group" href={i18n.getLocalizedPath('/', lang)}>
                <div class={`flex flex-col ${dir === 'rtl' ? 'items-end text-right' : 'items-start text-left'}`}>
                  <span class="text-2xl font-black tracking-tighter text-text-main dark:text-white uppercase leading-none">{logoText}</span>
                  {/* officialPortal && (
                    <span class="text-[8px] font-bold tracking-[0.2em] text-text-muted dark:text-gray-500 uppercase leading-none mt-1.5 opacity-60">
                      {officialPortal}
                    </span>
                  ) */}
                </div>
                <div class="flex h-10 w-10 items-center justify-center rounded-full bg-primary text-white font-black text-xl leading-none shadow-lg group-hover:rotate-12 transition-transform">
                  ח
                </div>
              </a>
              <p class={`max-w-xs text-sm text-text-muted dark:text-gray-400 font-medium leading-relaxed ${dir === 'rtl' ? 'text-right' : 'text-left'}`}>
                {settings?.footerText}
              </p>
            </div>
            <div class="grid grid-cols-2 gap-8 sm:grid-cols-3 md:gap-16">
              {footerMenus.map((menu: any) => (
                <div class="flex flex-col gap-4">
                  <h4 class="text-sm font-black uppercase tracking-wider text-text-main dark:text-white">{menu.title}</h4>
                  {menu.links.map((link: any) => (
                    <a class="text-sm text-text-muted hover:text-primary transition-colors dark:text-gray-400" href={link.link}>
                      {link.label}
                    </a>
                  ))}
                </div>
              ))}
            </div>
          </div>
          <div class="mt-16 flex flex-col items-center justify-between border-t border-gray-200 py-8 dark:border-gray-800 sm:flex-row">
            <p class="text-sm text-text-muted dark:text-gray-500">
              {settings?.copyrightText}
            </p>
            <div class="mt-4 flex gap-8 sm:mt-0">
              <a class="text-sm text-text-muted hover:text-primary transition-colors dark:text-gray-500" href="#">{i18n.t(lang, 'privacyPolicy')}</a>
              <a class="text-sm text-text-muted hover:text-primary transition-colors dark:text-gray-500" href="#">{i18n.t(lang, 'termsOfService')}</a>
            </div>
          </div>
        </div>
      </footer>
    </div>

    <script>
      import { subscribe } from '@payloadcms/live-preview';

      const serverURL = 'http://localhost:3000';
      let hasInitialized = false;

      subscribe({
        serverURL,
        depth: 2,
        callback: async (data) => {
          if (hasInitialized) {
            console.log('[LivePreview] Data changed, updating DOM...', data);
            try {
              // Fetch the current page HTML to get the server-rendered updates
              const response = await fetch(window.location.href);
              const html = await response.text();
              const parser = new DOMParser();
              const doc = parser.parseFromString(html, 'text/html');
              
              // Swap the main content area for a flicker-free "live" update
              const newMain = doc.querySelector('main');
              const currentMain = document.querySelector('main');
              
              if (newMain && currentMain) {
                currentMain.innerHTML = newMain.innerHTML;
              }
              
              // Also update the title if it changed
              if (doc.title) document.title = doc.title;
              
            } catch (err) {
              console.error('[LivePreview] Error updating DOM:', err);
              // Fallback to reload if fetch fails
              window.location.reload();
            }
          }
          hasInitialized = true;
        },
      });
    </script>
  </body>
</html>

