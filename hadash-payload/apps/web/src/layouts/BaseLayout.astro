---
import * as i18n from '../utils/i18n'
import * as payload from '../utils/payload'

const { lang = 'en' } = Astro.props
const dir = lang === 'he' ? 'rtl' : 'ltr'

const navigation = await payload.getPayloadGlobal('navigation', lang)
const settings = await payload.getPayloadGlobal('site-settings', lang)
// const navigation = { menuItems: [], footerMenus: [] }
// const settings = { logoText: 'Hadash', footerText: 'Footer' }
// console.log('Mocked global data used in BaseLayout');

const logoText = settings?.logoText || i18n.t(lang, 'logoText')
const officialPortal = settings?.officialPortal || i18n.t(lang, 'officialPortal')
const menuItems = navigation?.menuItems || []
const footerMenus = navigation?.footerMenus || []
---
<!DOCTYPE html>
<html class="light" lang={lang} dir={dir}>
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="icon" type="image/x-icon" href={`${import.meta.env.BASE_URL}favicon.svg`} />
    <title>Hadash - Building a Shared Future</title>
    <link href="https://fonts.googleapis.com" rel="preconnect" />
    <link crossorigin="" href="https://fonts.gstatic.com" rel="preconnect" />
    <link href="https://fonts.googleapis.com/css2?family=Rubik:wght@300;400;500;700;800;900&amp;display=swap" rel="stylesheet" />
    <link href="https://fonts.googleapis.com/css2?family=Material+Symbols+Outlined:wght,FILL@100..700,0..1&amp;display=swap" rel="stylesheet" />
    <style>
      body {
        font-family: 'Rubik', sans-serif;
      }
    </style>
  </head>
  <body class="bg-background-light dark:bg-background-dark text-text-main dark:text-white transition-colors duration-200">
    <div class="relative flex min-h-screen w-full flex-col overflow-x-hidden">
      <header class="sticky top-0 z-50 w-full border-b border-gray-100 bg-white/95 dark:bg-background-dark/95 dark:border-gray-800 backdrop-blur-md">
        <div class="mx-auto flex h-20 max-w-[1200px] items-center justify-between px-4 sm:px-6 lg:px-8">
          <div class="flex items-center gap-4">
            <a class="flex items-center gap-3 group" href={i18n.getLocalizedPath('/', lang)}>
              <div class="flex h-12 w-12 items-center justify-center rounded-full bg-primary text-white font-black text-2xl leading-none shadow-sm">
                ח
              </div>
              <div class="flex flex-col">
                <h2 class="text-3xl font-black tracking-tighter text-primary uppercase leading-none">{logoText}</h2>
                {officialPortal && (
                  <span class="text-[0.6rem] font-bold tracking-widest text-text-main dark:text-gray-400 uppercase leading-none mt-0.5">{officialPortal}</span>
                )}
              </div>
            </a>
          </div>
          <nav class="hidden xl:flex items-center gap-6">
            {menuItems.map((item: any) => (
              <a class="text-xs font-bold uppercase tracking-wide text-text-main hover:text-primary transition-colors" href={item.link}>
                {item.label}
              </a>
            ))}
          </nav>
          <div class="flex items-center gap-4">
            <div class="hidden lg:flex items-center divide-x divide-gray-300 dark:divide-gray-600 border border-gray-200 dark:border-gray-700 rounded-md overflow-hidden h-9">
              <a class={`px-3 py-1.5 hover:bg-gray-100 dark:hover:bg-gray-700 text-xs font-bold uppercase flex items-center gap-1 ${lang === 'en' ? 'bg-primary text-white' : 'bg-gray-50 dark:bg-gray-800 text-text-muted dark:text-gray-300'}`} href={i18n.getLocalizedPath('/', 'en')}>
                <span class="material-symbols-outlined text-[16px]">language</span> EN
              </a>
              <a class={`px-3 py-1.5 hover:bg-gray-100 dark:hover:bg-gray-700 text-xs font-bold uppercase flex items-center gap-1 ${lang === 'he' ? 'bg-primary text-white' : 'bg-gray-50 dark:bg-gray-800 text-text-muted dark:text-gray-300'}`} href={i18n.getLocalizedPath('/', 'he')}>
                HE
              </a>
              <a class={`px-3 py-1.5 hover:bg-gray-100 dark:hover:bg-gray-700 text-xs font-bold uppercase flex items-center gap-1 ${lang === 'ru' ? 'bg-primary text-white' : 'bg-gray-50 dark:bg-gray-800 text-text-muted dark:text-gray-300'}`} href={i18n.getLocalizedPath('/', 'ru')}>
                RU
              </a>
            </div>
            <button class="flex items-center justify-center rounded bg-primary px-5 py-2 text-xs font-black text-white transition-all hover:bg-primary-dark shadow-md hover:shadow-lg uppercase tracking-wider">
              {i18n.t(lang, 'donate')}
            </button>
            <button class="xl:hidden text-text-main dark:text-white">
              <span class="material-symbols-outlined">menu</span>
            </button>
          </div>
        </div>
      </header>
      
      <main class="flex-grow">
        <slot />
      </main>

      <footer class="border-t border-gray-200 bg-gray-50 dark:bg-background-dark dark:border-gray-800">
        <div class="mx-auto max-w-[1200px] px-4 py-16 sm:px-6 lg:px-8">
          <div class="flex flex-col md:flex-row md:justify-between gap-12">
            <div class="flex flex-col gap-6">
              <a class="flex items-center gap-3 group" href={i18n.getLocalizedPath('/', lang)}>
                <div class="flex h-10 w-10 items-center justify-center rounded-full bg-primary text-white font-black text-lg leading-none shadow-sm">
                  ח
                </div>
                <div class="flex flex-col">
                  <span class="text-2xl font-black tracking-tighter text-text-main dark:text-white uppercase leading-none">{i18n.t(lang, 'logoText')}</span>
                </div>
              </a>
              <p class="max-w-xs text-sm text-text-muted dark:text-gray-400 font-medium leading-relaxed">
                {settings?.footerText}
              </p>
            </div>
            <div class="grid grid-cols-2 gap-8 sm:grid-cols-3 md:gap-16">
              {footerMenus.map((menu: any) => (
                <div class="flex flex-col gap-4">
                  <h4 class="text-sm font-black uppercase tracking-wider text-text-main dark:text-white">{menu.title}</h4>
                  {menu.links.map((link: any) => (
                    <a class="text-sm text-text-muted hover:text-primary transition-colors dark:text-gray-400" href={link.link}>
                      {link.label}
                    </a>
                  ))}
                </div>
              ))}
            </div>
          </div>
          <div class="mt-16 flex flex-col items-center justify-between border-t border-gray-200 py-8 dark:border-gray-800 sm:flex-row">
            <p class="text-sm text-text-muted dark:text-gray-500">
              {settings?.copyrightText}
            </p>
            <div class="mt-4 flex gap-8 sm:mt-0">
              <a class="text-sm text-text-muted hover:text-primary transition-colors dark:text-gray-500" href="#">{i18n.t(lang, 'privacyPolicy')}</a>
              <a class="text-sm text-text-muted hover:text-primary transition-colors dark:text-gray-500" href="#">{i18n.t(lang, 'termsOfService')}</a>
            </div>
          </div>
        </div>
      </footer>
    </div>
  </body>
</html>

