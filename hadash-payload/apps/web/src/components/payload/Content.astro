
---
import RichText from './RichText.astro'

const { block } = Astro.props;
const { content, maxWidth } = block;

const containerClasses = {
    default: 'max-w-3xl',
    wide: 'max-w-5xl',
    full: 'max-w-full',
};
---
<section class="px-4 py-12 md:py-20 bg-white dark:bg-background-dark">
    <div class={`mx-auto ${containerClasses[maxWidth] || containerClasses.default}`}>
         <div class="prose prose-lg dark:prose-invert max-w-none">
             <RichText node={content?.root} />
         </div>
    </div>
</section>
