---
import { getCollection } from 'astro:content';
import BaseLayout from '../layouts/BaseLayout.astro';
import PlatformAccordion from '../components/PlatformAccordion.astro';

import heroBg from '../assets/hero-bg.webp';
import supportHero1 from '../assets/support/hero-1.webp';
import supportHero2 from '../assets/support/hero-2.webp';
import supportHero3 from '../assets/support/hero-3.webp';
import supportHero4 from '../assets/support/hero-4.webp';

export async function getStaticPaths() {
  const pages = await getCollection('pages');
  
  const pagePaths = pages.map(page => {
    let [lang, ...slugParts] = page.slug.split('/');
    let slug: string | undefined = slugParts.join('/');
    if (slug === 'index' || page.slug === 'index') slug = undefined;
    let finalSlug: string | undefined = lang === 'en' ? slug : (slug ? `${lang}/${slug}` : lang);
    if (lang === 'en' && !slug) finalSlug = undefined;
    return { params: { slug: finalSlug || undefined }, props: { entry: page, type: 'page', lang } };
  });

  return pagePaths;
}

import type { CollectionEntry } from 'astro:content';

type Props = 
  | { entry: CollectionEntry<'pages'>; type: 'page'; lang: string }
  | { entry: CollectionEntry<'news'>; type: 'news'; lang: string };

const { entry, type, lang } = Astro.props;
const newsEntry = type === 'news' ? (entry as CollectionEntry<'news'>) : undefined;
const pageEntry = type === 'page' ? (entry as CollectionEntry<'pages'>) : undefined;
const { Content } = await entry.render();
const donationHeroSlides = [supportHero1.src, supportHero2.src, supportHero3.src, supportHero4.src];
const donationUi = {
  he: {
    subline: 'בעזרתך, נעמוד איתנים מול הרדיפה ונפרוץ קדימה',
    chooseAmount: 'בחרו סכום לתמיכה',
    recurringHint: 'תומכים שבוחרים בתמיכה קבועה מאפשרים לנו לבנות את כוחנו לטווח הארוך!',
    oneTime: 'חד פעמי',
    monthly: 'כל חודש',
    other: 'אחר',
    supportNow: 'תמכו עכשיו',
    legal1: '* ניתן לתרום עד לסכום מרבי של 2600 ₪ לשנת הבחירות 2026, או 91 ₪ בתרומה חודשית.',
    legal2: '* התרומות מותרות רק לאזרחים ישראלים או לתושבי קבע בישראל, מגיל 18 ומעלה.',
  },
  en: {
    subline: 'With your support, we stand firm and keep moving forward.',
    chooseAmount: 'Choose an amount',
    recurringHint: 'Recurring support helps us build long-term strength.',
    oneTime: 'One-time',
    monthly: 'Monthly',
    other: 'Other',
    supportNow: 'Support now',
    legal1: '* Up to ₪2,600 annual support in 2026, or up to ₪91 monthly.',
    legal2: '* Donations are permitted only for Israeli citizens/residents, age 18+.',
  },
  ar: {
    subline: 'بدعمكم نصمد بثبات في وجه الملاحقة ونتقدم إلى الأمام.',
    chooseAmount: 'اختاروا مبلغ الدعم',
    recurringHint: 'الدعم الشهري يساعدنا على بناء قوتنا على المدى البعيد.',
    oneTime: 'مرة واحدة',
    monthly: 'شهري',
    other: 'أخرى',
    supportNow: 'ادعموا الآن',
    legal1: '* يمكن التبرع حتى 2600 ₪ سنويا في 2026، أو حتى 91 ₪ شهريا.',
    legal2: '* التبرعات مسموحة فقط للمواطنين/المقيمين في إسرائيل بعمر 18 عاما فما فوق.',
  },
  ru: {
    subline: 'С вашей поддержкой мы сохраняем стойкость и двигаемся вперед.',
    chooseAmount: 'Выберите сумму',
    recurringHint: 'Регулярная поддержка помогает нам укреплять движение в долгую.',
    oneTime: 'Разово',
    monthly: 'Ежемесячно',
    other: 'Другое',
    supportNow: 'Поддержать',
    legal1: '* До ₪2,600 в 2026 году или до ₪91 в ежемесячном формате.',
    legal2: '* Пожертвования разрешены только гражданам/резидентам Израиля 18+.',
  },
} as const;
const donationText = donationUi[(lang as keyof typeof donationUi)] ?? donationUi.en;
---

<BaseLayout title={entry.data.title} description={entry.data.description} lang={lang}>
  <main class={`py-12 ${type === 'news' ? 'container mx-auto px-4' : ''}`}>
    {type === 'news' ? (
      <article class="prose prose-lg prose-red max-w-4xl mx-auto">
        <header class="mb-12 not-prose text-center">
          <div class="flex items-center justify-center gap-4 mb-6">
            <span class="px-3 py-1 bg-[#E2343A]/10 text-[#E2343A] text-sm font-bold rounded-full">{newsEntry!.data.category}</span>
            <time class="text-gray-500 text-sm font-medium">
              {new Date(newsEntry!.data.publishDate).toLocaleDateString(lang, { year: 'numeric', month: 'long', day: 'numeric' })}
            </time>
          </div>
          <h1 class="text-4xl md:text-6xl font-heading font-black mb-6 leading-tight text-gray-900">{entry.data.title}</h1>
          <p class="text-xl text-gray-600 italic leading-relaxed max-w-2xl mx-auto">{entry.data.description}</p>
        </header>

        {newsEntry!.data.image && (
          <img src={newsEntry!.data.image} alt={entry.data.title} class="w-full h-[500px] object-cover rounded-[2rem] shadow-2xl mb-16 border border-gray-100 not-prose" />
        )}

        <div class="max-w-3xl mx-auto">
          <Content />
        </div>
      </article>
    ) : (
      <>
        {pageEntry!.data.isDonationPage ? (
          <div class="font-sans text-gray-900" dir={lang === 'he' || lang === 'ar' ? 'rtl' : 'ltr'}>
             {/* Hero Section */}
             <section class="relative min-h-[560px] overflow-hidden -mt-12">
                <div class="absolute inset-0">
                  {donationHeroSlides.map((image, index) => (
                    <div
                      class="absolute inset-0 bg-cover bg-center donation-hero-slide"
                      style={`background-image: url(${image}); animation-delay: ${index * 6}s;`}
                    ></div>
                  ))}
                </div>
                <div class="absolute inset-0 bg-gradient-to-b from-black/20 via-black/55 to-black/65"></div>

                <div class="container mx-auto px-6 relative z-10 text-center text-white pt-28 pb-16 md:pt-36 md:pb-20">
                  <h1 class="text-5xl md:text-7xl font-black leading-tight">
                    {pageEntry!.data.hero!.title.split('\n').map((line) => (
                      <span class="block">{line}</span>
                    ))}
                  </h1>
                  <h2 class="mt-5 inline-block bg-[#E2343A] px-4 md:px-6 py-2 text-3xl md:text-5xl font-black">
                    {pageEntry!.data.hero!.description}
                  </h2>
                  <p class="mt-6 text-xl md:text-2xl font-medium max-w-3xl mx-auto">{donationText.subline}</p>
                  {pageEntry!.data.hero?.buttons?.[0] && (
                    <a href="#donation-form" class="mt-8 inline-flex items-center gap-2 bg-[#E2343A] hover:bg-[#c22a30] px-8 py-3 rounded-full font-bold text-lg transition-colors">
                      {pageEntry!.data.hero.buttons[0].label}
                      <span class="material-symbols-outlined rtl:rotate-180">arrow_forward</span>
                    </a>
                  )}
                </div>
             </section>

             {/* Donation Form Card */}
             <section id="donation-form" class="relative -mt-16 md:-mt-20 z-20">
               <div class="container mx-auto px-6">
                 <div class="max-w-3xl mx-auto bg-[#F5F2F1] rounded-2xl shadow-[0_12px_40px_rgba(0,0,0,0.2)] p-6 md:p-10 border border-[#e8e2df]">
                   <div class="text-center mb-6">
                     <span class="material-symbols-outlined text-[#E2343A] text-4xl">volunteer_activism</span>
                     <h3 class="mt-2 text-3xl font-black text-[#E2343A]">{donationText.chooseAmount}</h3>
                     <p class="mt-2 text-sm text-gray-600">{donationText.recurringHint}</p>
                   </div>

                   <div class="max-w-md mx-auto bg-white rounded-2xl p-4 border border-gray-200 shadow-sm">
                     <div class="grid grid-cols-2 bg-gray-100 rounded-full p-1 mb-4 text-sm font-bold">
                       <button class="rounded-full bg-[#E2343A] text-white py-1.5">{donationText.oneTime}</button>
                       <button class="rounded-full text-gray-600 py-1.5">{donationText.monthly}</button>
                     </div>
                     <div class="grid grid-cols-3 gap-2 mb-4">
                       {[20, 40, 50, 60, 91].map(amount => (
                         <button class="border border-gray-200 bg-gray-50 hover:border-[#E2343A] hover:text-[#E2343A] rounded-lg py-2.5 font-bold transition-colors">
                           &#8362;{amount}
                         </button>
                       ))}
                       <input type="number" placeholder={donationText.other} class="border border-gray-200 bg-gray-50 rounded-lg px-2 text-center focus:border-[#E2343A] outline-none font-semibold" />
                     </div>
                     <button class="w-full bg-[#E2343A] hover:bg-[#c22a30] text-white py-3 rounded-full font-black text-lg transition-colors">{donationText.supportNow}</button>
                   </div>

                   <div class="mt-6 pt-5 border-t border-[#ddd4d1] text-[0.7rem] text-gray-500 leading-relaxed text-center">
                     <p>{donationText.legal1}</p>
                     <p>{donationText.legal2}</p>
                   </div>
                 </div>
               </div>
             </section>

             {/* Content Section */}
             <section class="py-20 bg-[#f6f6f6]">
                <div class="container mx-auto px-6 max-w-6xl">
                  <div class="grid md:grid-cols-2 gap-10 items-center">
                    <div class="rounded-2xl overflow-hidden shadow-xl bg-black aspect-video">
                      <iframe
                        class="w-full h-full"
                        src="https://www.youtube.com/embed/KVaYYvg-CPE"
                        title="Hadash video"
                        loading="lazy"
                        allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture"
                        allowfullscreen
                      ></iframe>
                    </div>
                    <div>
                      <h2 class="text-4xl md:text-5xl leading-tight font-black text-gray-900">{lang === 'he' ? 'בעזרתך אנחנו בונים מחד״ש' : lang === 'ar' ? 'بدعمكم نبني الجبهة من جديد' : lang === 'ru' ? 'С вашей поддержкой мы строим Хадаш' : 'With your support we build Hadash'}</h2>
                      <div class="mt-5 text-gray-700 leading-relaxed">
                        <Content />
                      </div>
                      <div class="mt-8 grid grid-cols-3 gap-4">
                        {pageEntry!.data.sections?.map(section => (
                          <div class="text-center">
                            <div class="w-14 h-14 mx-auto rounded-2xl bg-[#E2343A]/10 text-[#E2343A] flex items-center justify-center">
                              <span class="material-symbols-outlined text-3xl">{section.icon || 'star'}</span>
                            </div>
                            <h4 class="mt-2 font-black text-xl text-gray-900">{section.title}</h4>
                            <p class="mt-1 text-sm text-gray-500">{section.content}</p>
                          </div>
                        ))}
                      </div>
                    </div>
                  </div>
                </div>
             </section>

             <style>
               @keyframes donation-hero-fade {
                 0% { opacity: 0; transform: scale(1); }
                 6% { opacity: 1; transform: scale(1.03); }
                 23% { opacity: 1; transform: scale(1.06); }
                 29% { opacity: 0; transform: scale(1.08); }
                 100% { opacity: 0; transform: scale(1.08); }
               }

               .donation-hero-slide {
                 opacity: 0;
                 animation: donation-hero-fade 24s infinite;
               }
             </style>
          </div>
        ) : (<>
          {/* Standard Page Layout */}
        {pageEntry!.data.hero && (
          <section class="not-prose mb-20 text-center min-h-[85vh] flex items-center justify-center relative overflow-hidden bg-hadashGreen mx-0 rounded-none lg:rounded-[0] shadow-2xl">
            <div class="absolute inset-0 opacity-100 bg-cover bg-center animate-ken-burns" style={`background-image: url(${heroBg.src});`}></div>
            <div class="absolute inset-0 bg-gradient-to-t from-hadashGreen/90 via-hadashGreen/50 to-black/40"></div>
            
            <div class="relative z-10 max-w-6xl mx-auto px-6">
              <h1 class="text-5xl md:text-8xl font-heading font-black mb-8 tracking-tight text-white leading-[1.1]">{pageEntry!.data.hero.title}</h1>
              <p class="text-xl md:text-3xl text-white/90 mb-12 max-w-3xl mx-auto leading-relaxed font-medium">{pageEntry!.data.hero.description}</p>
              <div class="flex flex-wrap justify-center gap-6">
                {pageEntry!.data.hero.buttons?.map(btn => (
                  <a 
                    href={btn.link.startsWith('/') && !btn.link.startsWith('/hadash/') ? `/hadash${btn.link}` : btn.link} 
                    class={`px-10 py-5 rounded-full font-bold text-lg md:text-xl transition-all duration-300 flex items-center gap-3 ${
                      btn.style === 'primary' 
                      ? 'bg-[#E2343A] text-white hover:bg-white hover:text-[#E2343A] shadow-xl shadow-[#E2343A]/20 hover:scale-105' 
                      : 'bg-white/10 backdrop-blur-md text-white border-2 border-white/20 hover:bg-white hover:text-[#E2343A]'
                    }`}
                  >
                    {btn.label}
                    <span class="material-symbols-outlined text-2xl">keyboard_double_arrow_left</span>
                  </a>
                ))}
              </div>
            </div>
          </section>
        )}

        <style>
          @keyframes ken-burns {
            0% { transform: scale(1); }
            50% { transform: scale(1.1) translate(-1%, -1%); }
            100% { transform: scale(1); }
          }
          .animate-ken-burns {
            animation: ken-burns 20s ease-in-out infinite alternate;
          }
        </style>

        {entry.slug.includes('platform') && (
          <section class="not-prose mb-20 container max-w-6xl mx-auto px-6">
            <PlatformAccordion 
              title={entry.data.title} 
              description={entry.data.description} 
              sections={pageEntry!.data.sections || []} 
              lang={lang}
            />
          </section>
        )}

        {pageEntry!.data.legislative && (
          <section class="not-prose mb-12 container max-w-6xl mx-auto px-6 space-y-6">
            <!-- Navigation Tabs -->
            <div class="flex flex-wrap gap-4 justify-center sticky top-24 z-30 bg-[#F4F0EE]/95 backdrop-blur-sm py-2 border-b border-gray-200">
               <a href="#passed" class="px-6 py-2 rounded-full bg-white border border-gray-200 hover:border-[#E2343A] hover:text-[#E2343A] font-bold shadow-sm transition-all text-sm md:text-base flex items-center gap-2">
                  <span class="material-symbols-outlined">check_circle</span>
                  {lang === 'en' ? "Laws Passed" : lang === 'ru' ? "Принятые законы" : lang === 'ar' ? "قوانين تم تمريرها" : "חוקים שהעברנו"}
               </a>
               <a href="#blocked" class="px-6 py-2 rounded-full bg-white border border-gray-200 hover:border-[#E2343A] hover:text-[#E2343A] font-bold shadow-sm transition-all text-sm md:text-base flex items-center gap-2">
                  <span class="material-symbols-outlined">block</span>
                  {lang === 'en' ? "Laws Blocked" : lang === 'ru' ? "Заблокированные законы" : lang === 'ar' ? "قوانين تم صدها" : "חוקים שבלמנו"}
               </a>
            </div>

            <PlatformAccordion 
              id="passed"
              title={lang === 'en' ? "Laws Passed" : lang === 'ru' ? "Принятые законы" : lang === 'ar' ? "قوانين تم تمريرها" : "חוקים שהעברנו"}
              description={lang === 'en' ? "Laws we successfully passed for the benefit of the public" : lang === 'ru' ? "Законы, которые мы успешно приняли на благо общества" : lang === 'ar' ? "القوانين التي نجحنا في تمريرها لصالح הجمهور" : "75 חוקים שהעברנו בשנים האחרונות לטובת הציבור"}
              sections={pageEntry!.data.legislative.passed} 
              lang={lang}
            />
            
            <PlatformAccordion 
              id="blocked"
              title={lang === 'en' ? "Laws Blocked" : lang === 'ru' ? "Заблокированные законы" : lang === 'ar' ? "قوانين تم صدها" : "חוקים שבלמנו"}
              description={lang === 'en' ? "Dangerous initiatives we successfully stopped" : lang === 'ru' ? "Опасные инициативы, которые мы успешно остановили" : lang === 'ar' ? "مبادرات خطيرة نجحنا في إيقافها" : "יוזמות מסוכנות ופוגעניות שהצלחנו לעצור"}
              sections={pageEntry!.data.legislative.blocked} 
              lang={lang}
            />
          </section>
        )}

        <div class="container max-w-4xl mx-auto px-6 prose prose-lg prose-slate">
          <Content />
        </div>

        {entry.slug.includes('news') && (
          <section class="not-prose mt-24 container max-w-6xl mx-auto px-6">
            <div class="grid gap-10">
            {(await getCollection('news'))
              .filter(article => article.slug.startsWith(lang))
              .sort((a, b) => new Date(b.data.publishDate).getTime() - new Date(a.data.publishDate).getTime())
              .map(article => (
                <a href={lang === 'en' ? `/hadash/news/${article.slug.split('/')[1]}` : `/hadash/${lang}/news/${article.slug.split('/')[1]}`} class="group flex flex-col md:flex-row gap-8 items-center p-8 bg-white rounded-[2rem] border border-gray-100 hover:border-hadashRed/30 transition-all hover:shadow-2xl hover:-translate-y-1">
                  {article.data.image && (
                    <div class="w-full md:w-80 h-56 flex-shrink-0 overflow-hidden rounded-2xl">
                      <img src={article.data.image} class="w-full h-full object-cover transition-transform duration-500 group-hover:scale-110" />
                    </div>
                  )}
                  <div class="flex-1">
                    <span class="inline-block px-3 py-1 bg-[#E2343A]/10 text-[#E2343A] text-xs font-bold rounded-full mb-4 uppercase tracking-widest">{article.data.category}</span>
                    <h3 class="text-3xl md:text-4xl font-heading font-black group-hover:text-[#E2343A] transition-colors mb-4 leading-tight">{article.data.title}</h3>
                    <p class="text-gray-600 text-lg leading-relaxed line-clamp-2 mb-6">{article.data.description}</p>
                    <div class="flex items-center text-[#E2343A] font-bold gap-2 text-lg">
                      <span>Read More</span>
                      <span class="material-symbols-outlined text-xl">keyboard_double_arrow_left</span>
                    </div>
                  </div>
                </a>
            ))}
            </div>
          </section>
        )}

        {pageEntry!.data.missionSections && (
          <section class="not-prose mt-24 container max-w-7xl mx-auto px-6">
            <div class="grid md:grid-cols-2 gap-8">
            {pageEntry!.data.missionSections.map(mission => (
              <div class="p-12 bg-white border border-gray-100 rounded-[3rem] shadow-sm hover:shadow-2xl transition-all duration-300 group">
                <div class="w-16 h-16 bg-[#E2343A]/10 rounded-2xl flex items-center justify-center text-[#E2343A] mb-8 group-hover:bg-[#E2343A] group-hover:text-white transition-colors duration-300">
                  <span class="material-symbols-outlined text-4xl">verified_user</span>
                </div>
                <h2 class="text-3xl font-heading font-black mb-6 whitespace-pre-line leading-tight">{mission.title}</h2>
                <blockquote class="italic text-gray-500 border-r-4 border-[#E2343A]/30 pr-6 py-2 mb-10 text-xl font-medium leading-relaxed">"{mission.quote}"</blockquote>
                <ul class="space-y-5">
                  {mission.points.map(point => (
                    <li class="flex items-start gap-4 text-gray-700">
                      <span class="text-[#E2343A] mt-1 flex-shrink-0">
                        <span class="material-symbols-outlined text-2xl">check_circle</span>
                      </span>
                      <span class="text-xl leading-snug">{point.text}</span>
                    </li>
                  ))}
                </ul>
              </div>
            ))}
            </div>
          </section>
        )}
      </>)}
      </>
    )}
  </main>
</BaseLayout>
